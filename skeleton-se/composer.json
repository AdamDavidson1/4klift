{
  "name": "deasilworks/4klift-se",
  "description": "Big Data Framework",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "framework",
    "cassandra",
    "php",
    "4klift",
    "cms",
    "api"
  ],
  "authors": [
    {
      "name": "Deasil Works, Inc.",
      "email": "code@deasil.works"
    },
    {
      "name": "Craig Johnston",
      "email": "craig@deasil.works"
    }
  ],
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.6.0",
    "silex/silex": "~2.0",
    "silex/web-profiler": "~2.0",
    "symfony/asset": "~2.8|^3.0",
    "symfony/browser-kit": "~2.8|^3.0",
    "symfony/class-loader": "~2.8|^3.0",
    "symfony/config": "~2.8|^3.0",
    "symfony/console": "~2.8|^3.0",
    "symfony/css-selector": "~2.8|^3.0",
    "symfony/debug": "~2.8|^3.0",
    "symfony/finder": "~2.8|^3.0",
    "symfony/form": "~2.8|^3.0",
    "symfony/monolog-bridge": "~2.8|^3.0",
    "symfony/process": "~2.8|^3.0",
    "symfony/security": "~2.8|^3.0",
    "symfony/translation": "~2.8|^3.0",
    "symfony/twig-bridge": "~2.8|^3.0",
    "symfony/validator": "~2.8|^3.0",
    "deasilworks/cef": "^1.0",
    "deasilworks/api": "^1.0",
    "deasilworks/cms": "^1.0",
    "deasilworks/cfg": "^1.0",
    "deasilworks/4klift-core": "^1.0"
  },
  "require-dev": {
    "behat/behat": "^3.3",
    "phpunit/phpunit": "^5.7.21",
    "phpmd/phpmd" : "@stable",
    "evert/phpdoc-md": "^0.2.0"
  },
  "autoload": {
    "psr-0": {
      "MyProject": "src/"
    }
  },
  "scripts": {
    "update-core": [
      "cp ./vendor/deasilworks/4klift-core/index.php ./web/index.php",
      "cp ./vendor/deasilworks/4klift-core/4klift.php ./core/4klift.php",
      "cp ./vendor/deasilworks/4klift-core/cli.php ./core/cli.php"
    ],
    "link-examples": [
      "ln -sf ../vendor/deasilworks/4klift-core/cfg/example-application.yml ./cfg/application.yml",
      "ln -sf ../vendor/deasilworks/4klift-core/cfg/example-defaults.yml ./cfg/defaults.yml",
      "ln -sf ../vendor/deasilworks/4klift-core/cfg/example-parameters.yml ./cfg/parameters.yml",
      "ln -sf ../vendor/deasilworks/4klift-core/templates/4klift-index.html.twig ./templates/4klift-index.html.twig",
      "ln -sf ../vendor/deasilworks/4klift-core/templates/4klift-setup.html.twig ./templates/4klift-setup.html.twig"
    ],
    "post-install-cmd": [
      "@update-core",
      "@link-examples"
    ],
    "post-update-cmd": [
      "@update-core"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
